#!/usr/bin/env bash

set -eu

dep_file=${1-.gems}

[[ ! -f $dep_file ]] && echo ">> No .gems file" && exit 1

deps=$(sed 's/#.*//' < $dep_file | sort)
installed_deps=$(ruby -e "puts Gem::Specification.map { |g| [g.name, g.version].join(':') }")
install=$(comm -13 <(echo "$installed_deps") <(echo "$deps"))

[[ $install != "" ]] && echo ">> Installing deps" && gem install "$install"

echo ">> Ready to go"
